rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Plan history subcollection
      match /planHistory/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Profiles collection - authenticated users can read all, write their own
    match /profiles/{profileId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == profileId;
    }
    
    // Favorites collection - users can read/write their own favorites
    match /favorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notifications collection - users can read their own notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      allow write: if false; // Only cloud functions can write notifications
    }
    
    // System logs - only cloud functions can write
    match /systemLogs/{logId} {
      allow read, write: if false; // Only accessible via cloud functions
    }
  }
}